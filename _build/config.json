{
  "name": "Babel",
  "lowCaseName": "babel",
  "description": "The easy way for your multilingual site!",
  "author": "Jakob Class, Rico Goldsky, Joshua Luckers, Thomas Jakobi",
  "version": "3.2.0-rc5",
  "package": {
    "menus": [
      {
        "text": "babel",
        "description": "babel.desc",
        "action": "index"
      }
    ],
    "elements": {
      "snippets": [
        {
          "name": "BabelLinks",
          "description": "Displays links to translated resources.",
          "file": "babellinks.snippet.php",
          "properties": [
            {
              "name": "resourceId",
              "value": ""
            },
            {
              "name": "tpl",
              "value": "tplBabellink"
            },
            {
              "name": "wrapperTpl",
              "value": ""
            },
            {
              "name": "activeCls",
              "value": "active"
            },
            {
              "name": "showUnpublished",
              "type": "combo-boolean",
              "value": "0"
            },
            {
              "name": "showCurrent",
              "type": "combo-boolean",
              "value": "0"
            },
            {
              "name": "includeUnlinked",
              "type": "combo-boolean",
              "value": "0"
            },
            {
              "name": "ignoreSiteStatus",
              "type": "combo-boolean",
              "value": "0"
            },
            {
              "name": "toArray",
              "type": "combo-boolean",
              "value": "0"
            },
            {
              "name": "toPlaceholder",
              "value": ""
            }
          ]
        },
        {
          "name": "BabelTranslation",
          "description": "Returns the id of a translated resource in a given context.",
          "file": "babeltranslation.snippet.php",
          "properties": [
            {
              "name": "resourceId",
              "value": ""
            },
            {
              "name": "contextKey",
              "value": ""
            },
            {
              "name": "cultureKey",
              "value": ""
            },
            {
              "name": "showUnpublished",
              "type": "combo-boolean",
              "value": "0"
            }
          ]
        }
      ],
      "plugins": [
        {
          "name": "Babel",
          "description": "Links and synchronizes multilingual resources.",
          "file": "babel.plugin.php",
          "events": [
            "OnDocFormPrerender",
            "OnDocFormSave",
            "OnEmptyTrash",
            "OnContextRemove",
            "OnResourceDuplicate",
            "OnResourceSort"
          ]
        }
      ],
      "chunks": [
        {
          "name": "tplBabellink",
          "file": "babellink.chunk.html"
        },
        {
          "name": "tplBabellinkWrapper",
          "file": "babellinkwrapper.chunk.html"
        }
      ]
    },
    "systemSettings": [
      {
        "key": "debug",
        "type": "combo-boolean",
        "area": "system",
        "value": "0"
      },
      {
        "key": "contextKeys",
        "area": "system",
        "value": ""
      },
      {
        "key": "restrictToGroup",
        "type": "combo-boolean",
        "area": "system",
        "value": "1"
      },
      {
        "key": "displayText",
        "area": "system",
        "value": "language"
      },
      {
        "key": "babelTvName",
        "area": "system",
        "value": "babelLanguageLinks"
      },
      {
        "key": "syncTvs",
        "area": "system",
        "value": ""
      }
    ]
  },
  "dependencies": [
    {
      "name": "php",
      "version": ">=7.4"
    },
    {
      "name": "modx",
      "version": ">=2.4"
    }
  ],
  "build": {
    "readme": "docs/readme.md",
    "license": "docs/license.md",
    "changelog": "docs/changelog.md",
    "resolver": {
      "after": [
        "resolve.setupoptions.php",
        "resolve.permissions.php",
        "resolve.babelevents.php"
      ]
    },
    "setupOptions": {
      "source": "setup.options.php"
    }
  }
}
